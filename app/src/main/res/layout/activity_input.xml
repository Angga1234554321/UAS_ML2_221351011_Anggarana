<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D1B2A"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masukkan Detail Mobil"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Input Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#1B263B"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/etYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:hint="Tahun Mobil"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA"
                    android:backgroundTint="#FFFFFF"
                    android:inputType="number"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/etKM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:hint="Kilometer"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA"
                    android:backgroundTint="#FFFFFF"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/etBrand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:hint="Kode Merek (angka)"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA"
                    android:backgroundTint="#FFFFFF"
                    android:inputType="number"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/etFuel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:hint="Kode Bahan Bakar (angka)"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA"
                    android:backgroundTint="#FFFFFF"
                    android:inputType="number"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/etTransmission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:hint="Kode Transmisi (angka)"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#AAAAAA"
                    android:backgroundTint="#FFFFFF"
                    android:inputType="number"
                    android:layout_marginBottom="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Tombol Prediksi -->
        <Button
            android:id="@+id/btnPredict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prediksi Harga"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1F7A8C"
            android:padding="16dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>
</ScrollView>
